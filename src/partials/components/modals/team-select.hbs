<div class="hystmodal" id="team-select" aria-hidden="true">
    <div class="hystmodal__wrap">
        <div class="hystmodal__window" role="dialog" aria-modal="true">
            <button class="hystmodal__close" data-hystclose></button>
            <div class="modal">
                <div class="modal__heading-block">
                    <h3 class="modal__heading">Выберите команду которую хотите заявить</h3>
                </div>
                <form class="form js-form" action="#" data-need-validation>
                    <div class="form__input-wrapper js-validation-wrapper">
                        <select class="form__input js-custom-select" required>
                            <option value="">Название команды </option>
                            <option value="1">Название команды 1</option>
                            <option value="2">Название команды 2</option>
                            <option value="3">Название команды 3</option>
                        </select>
                    </div>
                    <button class="button button--wide js-form-submit" type="submit">Заявить команду</button>
                </form>
            </div>
        </div>
    </div>
</div>
